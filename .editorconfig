# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{py, html, css, js, json, md, conf, swift}]
indent_style = tab
indent_size = 4

[*.yaml]
indent_style = space
indent_size = 2
